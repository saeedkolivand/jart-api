# Database
# For Prisma migrations (running on host)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/jart?schema=public"

# For application (running in Docker)
DATABASE_URL="postgresql://postgres:postgres@jart-postgres:5432/jart?schema=public"

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1d

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# App
PORT=3000
NODE_ENV=development

# Email (using Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3001
